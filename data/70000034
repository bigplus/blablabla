            })
        })
    })
    
    function sweepEwm()
    {
        if(sweepNum<=25)
        {
        	var url = '/ask/issweepsuc/';
        	$.get(url,{'tid':payTid,'pid':pay_pid,'sn':pay_sn},function (data){
                if(data.code == 200)
                {
                    $('.pay-part').hide();
                    $('.success-part').show();
                    $('#firstprice').addClass("on").siblings().removeClass("on");
                	window.clearInterval(sweepObj);
                	sweepNum = 1;
                	return false;
                }
            },'json');
        	sweepNum++;
        }else{
        	window.clearInterval(sweepObj);
        	sweepNum = 1;
        	return false;
        }
    }
