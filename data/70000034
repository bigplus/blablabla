		pay_sn = $(this).attr('sn');
		pay_pid = $(this).attr('pid');
		paydocid = $(this).attr('doc_id');
		$('.change_price').html(payPrice+'元');
		var docewmurl = encodeURIComponent('http://m.120ask.com/pay/reward/doctor?post_id='+payTid+'&doc_id='+paydocid+'&pid='+pay_pid+'&price='+payPrice+'&sn='+pay_sn);
		var pay_ewm=pay_ewm_img+docewmurl;
		$('#pay_ewm_img').attr('src',pay_ewm);
		pay_ewm = '';
		sweepObj = setInterval("sweepEwm()",2000);
        tan();
        return false;
    })
    $(".close").click(function(){
    	$('#firstprice').addClass("on").siblings().removeClass("on");
    	window.clearInterval(sweepObj);
    	sweepNum = 1;
    	$('.pay-part').show();
        $('.success-part').hide();
        t.closeMask(obj);
    });

    $(function () {
    	$(".pay-part ul li").each(function () {
    		$(this).click(function () {
    			if ($(this).hasClass("txt")) {
    				window.clearInterval(sweepObj);
    		    	sweepNum = 1;
    	            $.ajax({
    	                url: "//m.120ask.com/connect/oauth2/docqr",
    	                async:false,
    	                jsonp: "callback",
    	                dataType: "jsonp",
    	                data: { "docid":paydocid,"w":"146","h":"146"},
    	                success: function( data ) {
    	                    var data = data.html;
    	                    $(".pay-part .right em").css("top","180px");
    	    	            $(".tab-cont .part var").html("微信扫描关注医生");
    	                    $(".tab-cont .part img").attr("src",data);
    	                }
    	            });
